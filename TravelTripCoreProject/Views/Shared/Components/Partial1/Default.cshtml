@using TravelTripCoreProject.Models.Classes
@model List<Blog>

<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@item.BlogImage" style="width:350px; height:180px" alt="" />
            </div>
            <div class="left-text">
                <h4> @item.Title</h4>
                <span class="doller">@item.DateTime.ToString("d")</span>
                @{
                    string desc = item.Description ?? "";
                    string shortDesc = desc.Length > 80 ? desc.Substring(0, 80) + "..." : desc;
                }
                <p>@shortDesc</p>
                <p><a href="/Blog/BlogDetail/@item.Id"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>
    }

    @await Component.InvokeAsync("Partial2") <!-- Değişiklik burada! -->
    <div class="clear"></div>
</div>

